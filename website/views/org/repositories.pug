extends layout.pug

include ../mixins/pagination.pug
include ../_includes/repositories.pug

block content
  style.
    .avatar-container {
      position: relative
    }

    .avatar-initials {
      filter: brightness(65%);
      background-color: transparent;
    }

    .avatar-picture {
      position: absolute;
    }

  div.card
    div.table-responsive
      +repositories(repositories, true)

    if pages > 1
      div.card-footer.d-flex.justify-content-center
        +pagination(pages, page)
